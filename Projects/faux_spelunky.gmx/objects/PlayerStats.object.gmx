        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Draw the stats

switch(room){
    case rm_menu:
        draw_set_halign(fa_center);//set text horizontal alignment

        //draw title
        draw_set_font(fnt_title)
        draw_text_colour(room_width/2+4, 32+6, "Super Faux#Spelunky", c_black, c_black, c_black, c_black, 1);
        draw_text_colour(room_width/2, 32, "Super Faux#Spelunky", c_white, c_white, c_white, c_white, 1);
        
        var subtitle = "";
        if(gamepad_is_connected(0)){
            subtitle = "Press [start] to play";
        }else{
            subtitle = "Press [space] to play";
        }
        
        //draw sub titles
        draw_set_font(fnt_start);
        draw_text_colour(room_width/2+2, room_height-44, subtitle, c_black, c_black, c_black, c_black, 1);
        draw_text_colour(room_width/2, room_height-48, subtitle, c_ltgray, c_ltgray, c_ltgray, c_ltgray, 1);
        
        break;
    case rm_highscore:
        draw_set_halign(fa_center);
        draw_set_font(fnt_start);
        draw_text_colour(view_wview[0]/2, 64+16, "Cave traversed in " + string(floor(time/room_speed)) + " seconds", c_white, c_white, c_white, c_white, 1);
        draw_text_colour(view_wview[0]/2, 96+16, "Current playthrough score: " + string(score), c_white, c_white, c_white, c_white, 1);
        draw_text_colour(view_wview[0]/2, 128+16, "All time highscore: " + string(highscore), c_white, c_white, c_white, c_white, 1);
        break;
    default:
        //Draw the hearts spaces
        for(var i = 0; i &lt; maxhp; ++i){
            draw_sprite_ext(spr_heart, 0, (24+i*36), 20, 1, 1, 0, c_black, 0.5);
        }
    
        //Draw the hearts
        for(var i = 0; i &lt; hp; ++i){
            draw_sprite_ext(spr_heart, 0, (24+i*36), 20, 1, 1, 0, c_white, 1);
        }
        
        //Draw the sapphires
        draw_set_halign(fa_right);
        draw_set_font(fnt_start);
        var sapp_str = "x"+string(sapphires);
        draw_text_colour(view_wview[0]-16, 8, sapp_str, c_white, c_white, c_white, c_white, 1);
        //draw sapp sprite
        var text_width = string_width(sapp_str);
        draw_sprite(spr_sapphire_gui, 0, view_wview[0]-32-text_width, 22);
        
        //Adding to the time
        time += 1;
        
        //Draw timer
        draw_set_font(fnt_time);
        draw_text_colour(view_wview[0]/2+32, 8, "Time: " + string(floor(time/room_speed)), c_white, c_white, c_white, c_white, 1);
        
        break;
}

